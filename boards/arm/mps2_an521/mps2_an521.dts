/dts-v1/;

#include <arm/armv8-m.dtsi>
#include <dt-bindings/i2c/i2c.h>

/ {
	compatible = "arm,mps2";
	#address-cells = <1>;
	#size-cells = <1>;

	chosen {
		zephyr,console = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	cpus {
		cpu@0 {
			compatible = "arm,cortex-m33";
		};
	};

	sram0: memory {
		compatible = "mmio-sram";
		reg = <0x30000000 0x20000>;
	};

	flash0: flash {
		reg = <0x10000000 0x200000>;
	};

	soc {
		timer0: timer@50000000 {
			compatible = "arm,cmsdk-timer";
			reg = <0x50000000 0x1000>;
			interrupts = <3 3>;
		};

		timer1: timer@50001000 {
			compatible = "arm,cmsdk-timer";
			reg = <0x50001000 0x1000>;
			interrupts = <4 3>;
		};

		dtimer0: dtimer@50002000 {
			compatible = "arm,cmsdk-dtimer";
			reg = <0x50002000 0x1000>;
			interrupts = <5 3>;
		};

		gpio0: gpio@50100000 {
			compatible = "arm,cmsdk-gpio";
			reg = <0x50100000 0x1000>;
			interrupts = <68 3>;
		};

		gpio1: gpio@50101000 {
			compatible = "arm,cmsdk-gpio";
			reg = <0x50101000 0x1000>;
			interrupts = <69 3>;
		};

		gpio2: gpio@50102000 {
			compatible = "arm,cmsdk-gpio";
			reg = <0x50102000 0x1000>;
			interrupts = <70 3>;
		};

		gpio3: gpio@50103000 {
			compatible = "arm,cmsdk-gpio";
			reg = <0x50103000 0x1000>;
			interrupts = <71 3>;
		};

		wdog0: wdog@50081000 {
			compatible = "arm,cmsdk-watchdog";
			reg = <0x50081000 0x1000>;
		};

		uart0: uart@50200000 {
			compatible = "arm,cmsdk-uart";
			reg = <0x50200000 0x1000>;
			interrupts = <33 3 32 3>;
			interrupt-names = "tx", "rx";
			current-speed = <115200>;
			label = "UART_0";
		};

		uart1: uart@50201000 {
			compatible = "arm,cmsdk-uart";
			reg = <0x50201000 0x1000>;
			interrupts = <35 3 34 3>;
			interrupt-names = "tx", "rx";
			current-speed = <115200>;
			label = "UART_1";
		};

		uart2: uart@50202000 {
			compatible = "arm,cmsdk-uart";
			reg = <0x50202000 0x1000>;
			interrupts = <37 3 36 3>;
			interrupt-names = "tx", "rx";
			current-speed = <115200>;
			label = "UART_2";
		};

		uart3: uart@50203000 {
			compatible = "arm,cmsdk-uart";
			reg = <0x50203000 0x1000>;
			interrupts = <39 3 38 3>;
			interrupt-names = "tx", "rx";
			current-speed = <115200>;
			label = "UART_3";
		};

		uart4: uart@50204000 {
			compatible = "arm,cmsdk-uart";
			reg = <0x50204000 0x1000>;
			interrupts = <41 3 40 3>;
			interrupt-names = "tx", "rx";
			current-speed = <115200>;
			label = "UART_4";
		};

		i2c_touch: i2c@50207000 {
			compatible = "arm,versatile-i2c";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x50207000 0x1000>;
			label = "I2C_TOUCH";
		};

		i2c_audio_conf: i2c@50208000 {
			compatible = "arm,versatile-i2c";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x50208000 0x1000>;
			label = "I2C_AUDIO_CONF";
		};

		i2c_shield0: i2c@5020c000 {
			compatible = "arm,versatile-i2c";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x5020c000 0x1000>;
			label = "I2C_SHIELD0";
		};

		i2c_shield1: i2c@5020d000 {
			compatible = "arm,versatile-i2c";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x5020d000 0x1000>;
			label = "I2C_SHIELD1";
		};
	};
};

&nvic {
	arm,num-irq-priority-bits = <3>;
};
